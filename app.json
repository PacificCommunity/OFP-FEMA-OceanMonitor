{
  "expo": {
    "name": "AquaGraph",
    "slug": "AquaGraph",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app_icon.png",
    "scheme": "aquagraph",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.AquaGraph",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to the Moana Deck Unit for downloading ocean temperature data.",
        "NSBluetoothPeripheralUsageDescription": "This app requires Bluetooth to communicate with the Moana Deck Unit.",
        "UIBackgroundModes": [
          "bluetooth-central",
          "fetch"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app_icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.AquaGraph",
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "FOREGROUND_SERVICE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK",
        "android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/app_icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#fffff"
        }
      ],
      "expo-sqlite",
      "expo-secure-store",
      "react-native-ble-plx",
      "expo-dev-client",
      [
        "expo-background-fetch",
        {
          "android": {
            "permissions": [
              "RECEIVE_BOOT_COMPLETED",
              "WAKE_LOCK"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5dbc1a82-4bb4-4c34-b916-288f7381eea7"
      }
    }
  }
}